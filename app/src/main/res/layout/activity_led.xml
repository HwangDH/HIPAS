<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    xmlns:andorid="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.hipas.LedActivity">


    <View
        android:id="@+id/horizon"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_below="@+id/temp_Linear"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-81dp"
        android:layout_marginRight="20dp"
        android:background="#ffffff" />

    <LinearLayout
        android:id="@+id/temp_Linear"
        android:layout_width="405dp"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="507dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:orientation="horizontal"
        android:padding="5dp">


        <Button
            android:id="@+id/led_on"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#00ff0000"
            android:gravity="center"
            android:src="@drawable/temp"

            android:text="LED ON"
            android:textColor="#ffffff"
            android:textSize="20dp"

            />
    </LinearLayout>

    <View
        android:id="@+id/horizon2"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_below="@+id/temp_Linear"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="20dp"
        android:background="#ffffff" />

    <LinearLayout
        android:id="@+id/gas_Linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizon2"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:padding="5dp">


        <Button
            android:id="@+id/led_off"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#00ff0000"
            android:gravity="center"

            android:text="LED OFF"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </LinearLayout>

    <View
        android:id="@+id/horizon3"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_below="@+id/gas_Linear"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="20dp"
        android:background="#ffffff" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="371dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="54dp"
        android:visibility="invisible"
        andorid:srcCompat="@drawable/led_light_on" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="478dp"
        android:background="#00FFFFFF"
        android:visibility="visible"
        andorid:srcCompat="@drawable/led_light_off" />

</RelativeLayout>