<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    xmlns:andorid="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.hipas.LedActivity">



    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:layout_gravity = "center"
        android:id="@+id/horizon1"
        android:layout_marginTop = "150dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:id="@+id/temp_Linear"
        android:layout_below="@+id/horizon1"
        >



        <Button
            android:id="@+id/led_on"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="LED ON"
            android:textSize="20dp"
            android:gravity="center"

            android:textColor= "#ffffff"
            android:background="#00ff0000"
            android:src="@drawable/temp"

            />

    </LinearLayout>


    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity = "center"
        android:layout_below="@+id/temp_Linear"
        android:id="@+id/horizon2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_below="@+id/horizon2"
        android:id="@+id/gas_Linear"
        >



        <Button
            android:id="@+id/led_off"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="LED OFF"
            android:textSize="20dp"
            android:gravity="center"

            android:textColor= "#ffffff"
            android:background="#00ff0000"
            />
    </LinearLayout>


    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:layout_gravity = "center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/horizon3"
        android:layout_below="@+id/gas_Linear"
        />

    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_below="@+id/led_Linear"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#ffffff" />

</RelativeLayout>